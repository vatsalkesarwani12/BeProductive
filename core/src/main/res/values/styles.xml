    <style name="Button.Rounded.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_edge_button</item>
    </style>

    <style name="Button.Outline" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outline_round_edge_button</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextInputEditText.Credentials" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:hint">Email</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextInputEditText.Normal" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
    </style>

